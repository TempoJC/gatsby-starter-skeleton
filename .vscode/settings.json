{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": true
  },
  "tailwindCSS.classAttributes": ["class", "className", "ngClass"],
  "tailwindCSS.experimental.classRegex": [
    ".*ClassName\\s?[=:]\\s?[\"'`]([^\"'`]*)"
  ],
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false
}
